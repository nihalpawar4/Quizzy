rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==================== HELPER FUNCTIONS ====================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isTeacher() {
      return isAuthenticated() && getUserData().role == 'teacher';
    }
    
    function isStudent() {
      return isAuthenticated() && getUserData().role == 'student';
    }
    
    // Check if target user is a student (for teacher management)
    function isTargetStudent(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role == 'student';
    }
    
    // ==================== USERS COLLECTION ====================
    
    match /users/{userId} {
      // Teachers can read all users, students can only read their own
      allow read: if isOwner(userId) || isTeacher();
      
      // Users can only create their own profile
      allow create: if isOwner(userId) && 
        request.resource.data.uid == userId &&
        request.resource.data.email is string &&
        request.resource.data.name is string &&
        request.resource.data.role in ['student', 'teacher'];
      
      // Users can update their own profile, OR teachers can update students (for restrict/enable)
      allow update: if isOwner(userId) || (isTeacher() && isTargetStudent(userId));
      
      // Users can delete their own profile, OR teachers can delete students
      allow delete: if isOwner(userId) || (isTeacher() && isTargetStudent(userId));
    }
    
    // ==================== TESTS COLLECTION ====================
    
    match /tests/{testId} {
      allow read: if isAuthenticated();
      allow create: if isTeacher();
      allow update: if isTeacher();
      allow delete: if isTeacher();
    }
    
    // ==================== QUESTIONS COLLECTION ====================
    
    match /questions/{questionId} {
      allow read: if isAuthenticated();
      allow create: if isTeacher();
      allow update: if isTeacher();
      allow delete: if isTeacher();
    }
    
    // ==================== RESULTS COLLECTION ====================
    
    match /results/{resultId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isTeacher();
      allow delete: if isTeacher();
    }
    
    // ==================== SUPPORT QUERIES COLLECTION ====================
    
    match /support_queries/{queryId} {
      allow create: if true;
      allow read: if isTeacher();
      allow update: if isTeacher();
      allow delete: if isTeacher();
    }
    
    // ==================== NOTES COLLECTION ====================
    
    match /notes/{noteId} {
      // All authenticated users can read notes
      allow read: if isAuthenticated();
      // Only teachers can create, update, and delete notes
      allow create: if isTeacher();
      allow update: if isTeacher();
      allow delete: if isTeacher();
    }
    
    // ==================== NOTIFICATIONS COLLECTION ====================
    
    match /notifications/{notificationId} {
      // All authenticated users can read notifications
      allow read: if isAuthenticated();
      // Only teachers can create notifications
      allow create: if isTeacher();
      // Students can update (to mark as viewed), teachers can also update
      allow update: if isAuthenticated();
      // Any authenticated user can delete notifications (students can dismiss their own)
      allow delete: if isAuthenticated();
    }
    
    // ==================== CREDIT ECONOMY COLLECTIONS ====================
    
    // Wallets - Each student has one wallet
    match /wallets/{walletId} {
      // All authenticated users can read wallets (for leaderboard, etc.)
      allow read: if isAuthenticated();
      // Any authenticated user can create/update wallets
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      // Only teachers can delete wallets
      allow delete: if isTeacher();
    }
    
    // Transactions - Read-only audit log
    match /transactions/{transactionId} {
      // All authenticated users can read transactions
      allow read: if isAuthenticated();
      // Transactions are created by the system
      allow create: if isAuthenticated();
      // No updates allowed (audit log)
      allow update: if false;
      allow delete: if isTeacher();
    }
    
    // Badges - Global badge definitions
    match /badges/{badgeId} {
      allow read: if isAuthenticated();
      allow create: if isTeacher();
      allow update: if isTeacher();
      allow delete: if isTeacher();
    }
    
    // User Badges - Badges earned by students
    match /userBadges/{userBadgeId} {
      // All authenticated users can read badges
      allow read: if isAuthenticated();
      // System or teachers can award badges
      allow create: if isAuthenticated();
      // No updates allowed
      allow update: if false;
      // Teachers can delete badges if needed
      allow delete: if isTeacher();
    }
    
    // Premium Tests - Special tests that cost coins
    match /premiumTests/{testId} {
      allow read: if isAuthenticated();
      allow create: if isTeacher();
      allow update: if isAuthenticated(); // Allow students to update attempt counts
      allow delete: if isTeacher();
    }
    
    // App Settings - Global app configuration
    match /appSettings/{settingId} {
      allow read: if isAuthenticated();
      allow write: if isTeacher();
    }
    
    // ==================== CHAT COLLECTIONS ====================
    
    // Helper function to check if user is a participant in a chat
    function isChatParticipant(chatData) {
      return request.auth.uid in chatData.participants;
    }
    
    // Chats - Conversations between students and teachers
    match /chats/{chatId} {
      // Only participants can read the chat
      allow read: if isAuthenticated() && isChatParticipant(resource.data);
      // Any authenticated user can create a chat (they must be a participant)
      allow create: if isAuthenticated() && request.auth.uid in request.resource.data.participants;
      // Only participants can update the chat
      allow update: if isAuthenticated() && isChatParticipant(resource.data);
      // Only participants can delete the chat (soft delete)
      allow delete: if isAuthenticated() && isChatParticipant(resource.data);
    }
    
    // Messages - Individual messages in chats
    match /messages/{messageId} {
      // Read messages if user is authenticated (we filter by chat participant in queries)
      allow read: if isAuthenticated();
      // Create message if authenticated
      allow create: if isAuthenticated() && request.resource.data.senderId == request.auth.uid;
      // Update message (for status changes)
      allow update: if isAuthenticated();
      // Delete only own messages
      allow delete: if isAuthenticated();
    }
    
    // Presence - Online/offline status
    match /presence/{userId} {
      // Anyone authenticated can read presence
      allow read: if isAuthenticated();
      // Only the user can update their own presence
      allow create, update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
    
    // Chat Notifications - New message alerts
    match /chatNotifications/{notificationId} {
      // Users can read their own notifications
      allow read: if isAuthenticated() && resource.data.recipientId == request.auth.uid;
      // Anyone can create notifications (when sending messages)
      allow create: if isAuthenticated();
      // Users can update their own notifications (mark as read)
      allow update: if isAuthenticated() && resource.data.recipientId == request.auth.uid;
      // Users can delete their own notifications
      allow delete: if isAuthenticated() && resource.data.recipientId == request.auth.uid;
    }
  }
}

