rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==================== HELPER FUNCTIONS ====================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isTeacher() {
      return isAuthenticated() && getUserData().role == 'teacher';
    }
    
    function isStudent() {
      return isAuthenticated() && getUserData().role == 'student';
    }
    
    // ==================== USERS COLLECTION ====================
    
    match /users/{userId} {
      allow read: if isOwner(userId) || isTeacher();
      allow create: if isOwner(userId) && 
        request.resource.data.uid == userId &&
        request.resource.data.email is string &&
        request.resource.data.name is string &&
        request.resource.data.role in ['student', 'teacher'];
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
    
    // ==================== TESTS COLLECTION ====================
    
    match /tests/{testId} {
      allow read: if isAuthenticated();
      allow create: if isTeacher();
      allow update: if isTeacher();
      allow delete: if isTeacher();
    }
    
    // ==================== QUESTIONS COLLECTION ====================
    
    match /questions/{questionId} {
      allow read: if isAuthenticated();
      allow create: if isTeacher();
      allow update: if isTeacher();
      allow delete: if isTeacher();
    }
    
    // ==================== RESULTS COLLECTION ====================
    
    match /results/{resultId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isTeacher();
      allow delete: if isTeacher();
    }
    
    // ==================== SUPPORT QUERIES COLLECTION ====================
    
    match /support_queries/{queryId} {
      allow create: if true;
      allow read: if isTeacher();
      allow update: if isTeacher();
      allow delete: if isTeacher();
    }
  }
}
